<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>History</title>
    <link rel="icon" href="/images/logo.jpg">
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
            border: none;
            outline: none;
            font-family: "Poppins", sans-serif;
        }
        .active {
  background-color: #6759ff;
  color: #ffffff;
}
        
        .card {
            background-color: #ffffff;
            display: flex; /* Use flexbox to layout children */
    border: 1px solid #ccc;
    margin-bottom: 10px;
            width: 1200px;
            height: 250px;
            margin-top: 3em;
            margin-left: 100px;
            padding: 1em;
            border-radius: 5px;
            box-shadow: 1em 2em 2.5em rgba(1, 2, 68, 0.08);
        }
        .image-container {
            text-align: center;
            flex: 1; /* Occupy remaining space */
    padding: 10px;
        }
        .image-container img {
            max-width: 100%;
            object-fit: contain;
            height: 15em;
        }
        .container {
            flex: 1; /* Occupy remaining space */
    padding: 10px;
            color: #110f29;
            margin-top: 20px;
        }
        .container h5 {
            font-weight: 500;
        }
        @media screen and (max-width: 720px) {
            img {
                max-width: 100%;
                object-fit: contain;
                height: 10em;
            }
            .card {
                max-width: 10em;
                margin-top: 1em;
            }
            #products {
                grid-template-columns: auto auto;
                grid-column-gap: 1em;
            }
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }
        .navbar {
            background-color: #333;
            color: #fff;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo img {
            margin-right: 10px;
        }
        .nav-options {
            display: flex;
            align-items: center;
        }
        .nav-options a {
            margin-left: 20px;
            text-decoration: none;
            color: #fff;
            font-size: 16px;
            text-transform: uppercase;
            transition: all 0.3s ease;
        }
        .nav-options a:hover {
            color: #4a90e2;
        }
        .main-heading {
            text-align: center;
            font-size: 48px;
            margin-top: 50px;
            color: #333;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }
        #content {
            margin-left: 25%;
            width: 75%;
            padding: 20px;
        }
    </style>
</head>
<body></body>
    <div class="navbar">
        <div class="logo">
            <a href="/register_login"><img class="img" src="/images/logo.jpg" alt="Bookify Logo" height="50px" width="150px"></a>
        </div>
        <div class="nav-options">
            <a href="/userpage/<%=username%>">Home</a>
        </div>
    </div>

    <div class="main-heading">History</div>
    <div id="products">
        <% data.forEach((x)=>{ %>
            <div class="card">
                <span class="image-container" style="display: inline;">
                    <img src="<%= (x.vehicleimage.split(/\s+/))[0]%>" alt="<%= x.vehicleid%>" width="300px" height="300px">
                </span>
                <span class="container" style="display: inline;">
                    <h3><%= x.name%></h3>
                    <br>
                    <h3>Start date and time&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= x.startdate%></h3>
                    <br>
                    <h3>Return date and time&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= x.returndate%></h3>
                    <br>
                    <h3>Total cost&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= x.totalcost%></h3>
                    <br>
                </span>

            </div>
            <%})%>
    </div>
    <script src="/js/userpage.js"></script>
    <script>
        function toggleMenu() {
            var menu = document.getElementById('menu');
            var menuIcon = document.querySelector('.menu-icon img');

            if (menu.style.display === 'block') {
                menu.style.display = 'none';
                menuIcon.src = "/images/menu.png";
            } else {
                menu.style.display = 'block';
                menuIcon.src = "/images/menu.png"; // Change to close icon
            }
        }
        document.body.addEventListener('click', function(event) {
            var menuIcon = document.querySelector('.menu-icon');
            var menu = document.getElementById('menu');
            if (!menuIcon.contains(event.target) && !menu.contains(event.target)) {
                menu.style.display = 'none';
            }
        });
    </script>
</body>

</html>


